<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping package="com.softwaremagico.librodeesher.pj"> 
    <class name="CharacterPlayer" table="CharacterPlayers">
        <id name="id" column="ID">
            <generator class="native"/>
        </id>
        <property name="name" column="name" />
        <property name="historyText" column="history" />
        <property name="raceName" column="race" />
        <property name="cultureName" column="culture" />
        <property name="professionName" column="profession" />
    </class>
 
</hibernate-mapping>